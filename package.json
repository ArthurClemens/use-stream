{
  "name": "use-stream",
  "version": "0.2.1",
  "description": "React Hook for working with streams.",
  "main": "dist/use-stream",
  "module": "dist/use-stream.mjs",
  "scripts": {
    "clean": "rm -rf dist/*",
    "rollup": "MODULE_NAME=useStream TYPESCRIPT=1 ./node_modules/rollup/dist/bin/rollup -c ./scripts/rollup.umd.js && TYPESCRIPT=1 ./node_modules/rollup/dist/bin/rollup -c ./scripts/rollup.es.js ",
    "build": "npm run clean && npm run rollup && npm run size",
    "test": "react-scripts test --env=jsdom",
    "size": "gzip -c dist/use-stream.js | wc -c"
  },
  "files": [
    "dist",
    "index.d.ts",
    "README.md"
  ],
  "author": "Arthur Clemens <arthurclemens@gmail.com> (http://visiblearea.com)",
  "homepage": "https://github.com/ArthurClemens/use-stream",
  "license": "MIT",
