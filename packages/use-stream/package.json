{
  "name": "use-stream",
  "version": "0.3.5",
  "description": "React Hook for working with streams.",
  "main": "dist/use-stream",
  "module": "dist/use-stream.mjs",
  "type": "module",
  "scripts": {
    "build": "npm run build:clean && npm run build:module && npm run build:umd && npm run size",
    "build:clean": "rm -rf dist/*.js",
    "build:module": "TYPESCRIPT=1 MODULE=1 MODULE_NAME=useStream ../../node_modules/rollup/dist/bin/rollup -c ../../scripts/rollup.config.js",
    "build:umd": "TYPESCRIPT=1 MODULE=0 MODULE_NAME=useStream ../../node_modules/rollup/dist/bin/rollup -c ../../scripts/rollup.config.js",
    "typecheck": "../../node_modules/typescript/bin/tsc --p tsconfig.json",
    "test": "react-scripts test --env=jsdom",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.5",
    "@types/debug": "4.1.5",
    "size-limit": "^4.4.5"
  },
  "files": [
    "dist",
    "index.d.ts",
    "README.md"
  ],
  "size-limit": [
    {
      "path": "dist/use-stream.js"
    }
  ],
  "author": "Arthur Clemens <arthurclemens@gmail.com> (http://visiblearea.com)",
  "homepage": "https://github.com/ArthurClemens/use-stream",
  "license": "MIT",
  "peerDependencies": {
    "debug": "^4.1.1",
    "react": "^16.13.1"
  }
}
